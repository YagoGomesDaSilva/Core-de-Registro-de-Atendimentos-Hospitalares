@model IEnumerable<Application.DTO.AtendimentoDTO>

@{
    ViewBag.Title = "Histórico de Atendimentos";
}

<h2>Histórico Geral de Atendimentos</h2>
<p>
    @Html.ActionLink("Registrar Novo Atendimento", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Data de Entrada</th>
            <th>Nome do Paciente</th>
            <th>CPF</th>
            <th>Status</th>
            <th>Pressão</th>
            <th>Temp.</th>
            <th>BPM</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataEntrada.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.Paciente != null ? item.Paciente.Nome : "-")</td>
                <td>@(item.Paciente != null ? item.Paciente.Cpf : "-")</td>
                <td>
                    @if (item.StatusAtendimento == "Ativo")
                    {
                        <span class="badge bg-warning text-dark">@item.StatusAtendimento</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.StatusAtendimento</span>
                    }
                </td>
                <td>@item.PressaoArterial</td>
                <td>@item.Temperatura</td>
                <td>@item.FrequenciaCardiaca</td>
                <td>
                    <a href="@Url.Action("Edit", "Atendimento", new { id = item.Id })" class="btn btn-sm btn-warning" title="Editar">
                        &#9998; Editar
                    </a>
                    <form action="@Url.Action("Delete", "Atendimento", new { id = item.Id })" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este atendimento?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" title="Excluir">
                            &#10006; Excluir
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>