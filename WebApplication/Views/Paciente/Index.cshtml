@model IEnumerable<Application.DTO.PacienteDTO>

@{
    ViewBag.Title = "Pacientes";
}

<h2>Lista de Pacientes</h2>
<p>
    @Html.ActionLink("Cadastrar Novo Paciente", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Data de Registro</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Cpf</td>
                <td>@(item.DataNascimento.HasValue ? item.DataNascimento.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td>@item.DataRegisto.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", "Paciente", new { id = item.Id })" class="btn btn-sm btn-warning" title="Editar">
                        &#9998; Editar
                    </a>
                    <form action="@Url.Action("Delete", "Paciente", new { id = item.Id })" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este paciente?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" title="Excluir">
                            &#10006; Excluir
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
