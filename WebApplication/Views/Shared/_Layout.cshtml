<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Sistema de Atendimento</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Sistema de Atendimento</a>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 mt-5">
        <p class="mb-0 text-muted">&copy; @DateTime.Now.Year - Sistema de Atendimento Hospitalar</p>
    </footer>

    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
</body>
</html>
